<div class="container mt-5">
	<div>
		<% if flash[:notice] %>
			<div class="row">
				<div style="color: #fff" class="col s12 green darken-3">
					<p><%=flash[:notice]%></p>
				</div>
			</div>
			<% end %>
			<!--  -->
			<% if flash[:alert] %>
			<div class="row">
				<div style="color: #fff" class="col s12 red darken-3">
					<% flash[:alert].each do |alert| %>
					<p><%=alert%></p>
					<%end%>
				</div>
			</div>
		<% end %>

		<div class="container">
		<h2>Listing <span><%= @dojos.length %></span> Dojos</h2>
			<table class="table table-bordered table-striped table-hover">
				<thead>
					<tr>
						<th>Coding Dojo Branch</th>
						<th>Street</th>
						<th>City</th>
						<th>State</th>
						<th>Action</th>
					</tr>
				</thead>

				<tbody>
					<% @dojos.each do |dojo| %>
					<tr>
						<td><%= dojo.branch%></td>
						<td><%= dojo.street%></td>
						<td><%= dojo.city%></td>
						<td><%= dojo.state%></td>
						<td>
							<a href="/dojos/<%= dojo.id%>" class="btn btn-primary">Show</a> |
							<a href="/dojos/<%= dojo.id%>/edit" class="btn btn-outline-primary">Edit</a> |
							<form action="/dojos/<%= dojo.id%>" method="POST">
								<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
								<input type="hidden" name="_method" value="delete" />
								<button class="btn btn-outline-danger" type="submit" name="action">Delete</button>
							</form>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<div class="row">
				<div class="col"><%= link_to 'New Dojo',dojos_new_path, class: "btn btn-primary" %></div>
			</div>
		</div>
		
	</div>
	
</div>
