<div class="container mt-5">
    <div class="row">
        <div class="col ps-0">
            <h2>Edit Student: <%= @student.first_name%> <%= @student.last_name%></h2>
        </div>
    </div>
    <div class="row col-6">
        <form action="/dojos/<%= @dojo.id%>/students/<%= @student.id%>" method="POST" class="col">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
            <input type="hidden" name="_method" value="patch" />
            <div class="row">
                <label for="first_name">First Name</label>
                <input id="first_name" class="form-control mb-3" type="text" name="student[first_name]" value="<%= @student.first_name%>" />
            </div>
            <div class="row">
                <label for="last_name">Last Name</label>
                <input id="last_name" class="form-control mb-3" type="text" name="student[last_name]" value="<%= @student.last_name%>" />
            </div>
            <div class="row">
                <label for="email">Email</label>
                <input id="email" class="form-control mb-3" type="text" name="student[email]" value="<%= @student.email%>" />
            </div>

            <div class="row mb-3">
                <label>Dojo</label>
                    <select class="form-select" name="student[dojo_id]">
                        <option value="" disabled selected>Choose your option</option>

                        <% @dojos.each do |dojo|%>
                        <option value="<%= dojo.id %>" <%= dojo.id == @dojo.id ? 'selected' : "" %>> <%= dojo.branch %></option>
                        <% end %>
                    </select>
            </div>

            <div class="row">
                <button class="btn btn-success mb-3" type="submit" name="action">
                    Update
                </button>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col ps-0"><a href="/dojos" class="btn btn-outline-primary">Home</a> | <a href="/dojos/<%= @student.dojo_id%>/students/<%= @student.id%>" class="btn btn-outline-dark"><%= @student.first_name%></a></div>
    </div>
</div>